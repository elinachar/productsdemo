
<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Title*" %><br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :short_description %><br>
    <%= form.text_area :short_description %>
  </div>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description, rows: 5 %>
  </div>

  <div class="field">
    <%= form.label :initial_price do %>
      Initial Price (&euro;)*
    <% end %><br>
    <%= form.text_field :initial_price %>
  </div>

  <div class="field">
    <%= form.label :final_price do%>
      Final Price (&euro;)*
    <% end %><br>
    <%= form.text_field :final_price %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary w-100' %>
  </div>
<% end %>
